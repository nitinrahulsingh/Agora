<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Both_Match_style"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_xxlarge">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_old_password"
            style="@style/match_Wrap_style">

            <EditText
                android:id="@+id/et_old_password"
                style="@style/Both_Match_style"
                android:hint="@string/old_password"
                android:inputType="textPassword"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_old_pass_field_required"
            style="@style/Both_Wrap_style"
            android:text="@string/field_required"
            android:textColor="@color/Rejected"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_new_password"
            style="@style/match_Wrap_style">

            <EditText
                android:id="@+id/et_new_password"
                style="@style/Both_Match_style"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_new_pass_field_required"
            style="@style/Both_Wrap_style"
            android:text="@string/field_required"
            android:textColor="@color/Rejected"
            android:visibility="gone" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_confirm_password"
            style="@style/match_Wrap_style">


            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/Both_Match_style"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:maxLength="20" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_confirm_pass_field_required"
            style="@style/Both_Wrap_style"
            android:text="@string/field_required"
            android:textColor="@color/Rejected"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>