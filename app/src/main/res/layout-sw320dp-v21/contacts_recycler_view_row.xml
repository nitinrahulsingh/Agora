                android:text="gggggg"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tvDesignation"
                style="@style/Both_Wrap_style"
                android:layout_below="@+id/tvEmpName"

                android:fontFamily="sans-serif-regular"
                android:text="sadfsdfsdfa"

                android:textColor="@color/title_light_grey"
                android:textSize="@dimen/_11ssp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_recycler_row_mail"
            style="@style/Both_Wrap_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/img_recycler_row_call"
            android:src="@drawable/mail_m" />

        <ImageView
            android:id="@+id/img_recycler_row_call"
            style="@style/Both_Wrap_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/phone_m" />


    </RelativeLayout>


