    <RelativeLayout
        android:id="@+id/relative_recycler_emp_details_container"
        style="@style/match_Wrap_style">

        <com.intelegain.agora.utils.CircularImageView
            android:id="@+id/imgContactsProfile"
            android:layout_width="@dimen/imgOccProfile_height"
            android:layout_height="@dimen/imgOccProfile_height"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_5sdp"
            android:adjustViewBounds="true"
            android:padding="@dimen/_5sdp"
            android:scaleType="center"
            android:src="@drawable/profile_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"

            android:layout_toLeftOf="@+id/img_recycler_row_mail"
