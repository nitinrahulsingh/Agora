<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap_style"
    android:orientation="vertical">

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="vertical"
        android:id="@+id/knowledge_row"
        android:padding="@dimen/_10sdp">
    <TextView
        android:id="@+id/knowledge_title"
        style="@style/Match_Wrap_roboto_regular_style"
        android:text="Enable/ON device location service directly from Android App"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="4.3"
        android:layout_height="wrap_content">

    <LinearLayout
        style="@style/Both_Wrap_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/knowledge_project_name"
            style="@style/Both_Wrap_roboto_regular_style"
            android:text="Knowledge Base"
            android:textColor="@color/orange"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/knowledge_separator"
            style="@style/Both_Wrap_roboto_regular_style"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/knowledge_technology"
            style="@style/Both_Wrap_roboto_regular_style"
            android:text="Miscellaneous"
            android:textColor="@color/orange"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <!--This view will be generated programmatically-->
    <HorizontalScrollView
        android:id="@+id/horizontal_scrollview_for_tags"
        android:scrollbars="none"
        style="@style/Both_Wrap_style">
        <LinearLayout
            android:id="@+id/linearLayoutForTags"
            style="@style/Both_Wrap_style"
            android:orientation="horizontal"/>
            <!--Programmatically generated TextView for TagNames comes here-->
    </HorizontalScrollView>

    <LinearLayout
        style="@style/Both_Wrap_style"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/knowledge_posted_by"
            style="@style/Both_Wrap_roboto_regular_style"
            android:drawableLeft="@drawable/knowledge_user_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Suraj Magre"
            android:textColor="@color/title_light_grey"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/knowledge_posted_date"
            style="@style/Both_Wrap_roboto_regular_style"
            android:drawableLeft="@drawable/knowledge_calendar_icon"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="07 Jul 2017"
            android:textColor="@color/title_light_grey"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>
    </LinearLayout>

            <ImageView
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:id="@+id/img_expand_collapse"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_arrow_down"
                android:layout_height="wrap_content" />
        </LinearLayout>

       <LinearLayout
           style="@style/match_Wrap_style"
           android:id="@+id/ll_knowledge_detail"
           android:visibility="visible"
           android:orientation="vertical"
           android:layout_marginTop="@dimen/_2sdp"
           >
        <TextView
            android:id="@+id/knowledge_description"
            style="@style/match_Wrap_style"
            android:drawablePadding="@dimen/_5sdp"
            android:text="description"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_2sdp"
            android:textColor="@color/title_light_grey"
            android:textSize="@dimen/_11sdp" />

           <LinearLayout
               android:id="@+id/ll_knowledge_file"
               style="@style/match_Wrap_style"
               android:orientation="horizontal"
               android:visibility="gone"
               android:paddingRight="@dimen/_2sdp"
               android:layout_marginTop="@dimen/_2sdp"
               > </LinearLayout>
       <!-- <TextView
            android:id="@+id/knowledge_file_name"
            style="@style/Both_Wrap_style"
            android:drawablePadding="@dimen/_5sdp"
            android:text="file name"
            android:visibility="gone"
            android:textColor="@color/title_light_grey"
            android:textSize="@dimen/_10sdp" />-->

        <TextView
            android:id="@+id/knowledge_url"
            style="@style/match_Wrap_style"
            android:drawablePadding="@dimen/_5sdp"
            android:text="url"
            android:autoLink="web"
            android:layout_marginTop="@dimen/_3sdp"
            android:visibility="gone"
            android:textColor="@color/title_light_grey"
            android:textSize="@dimen/_11sdp" />
       </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/outer_border"/>
</LinearLayout>